            android:layout_height="40pt"
            android:layout_marginRight="2pt"
            android:onClick="buSelect"
            android:text=" "
            android:textColor="@color/white" />

        <Button
            android:id="@+id/b9"
            android:layout_width="40pt"
            android:layout_height="40pt"
            android:layout_marginLeft="2pt"
            android:onClick="buSelect"
            android:text=" "
            android:textColor="@color/white" />
    </TableRow>
</TableLayout>
